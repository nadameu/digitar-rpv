		"typescript": "^2.8.1",
		"userscript-meta": "^1.0.1",
		"webpack": "^4.3.0",
		"webpack-cli": "^2.0.13",
		"webpack-dev-server": "^3.1.1"
	},
	"dependencies": {
		"intl": "^1.2.5"
	}
