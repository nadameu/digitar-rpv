		"@babel/preset-typescript": "^7.0.0-beta.42",
		"@types/clean-webpack-plugin": "^0.1.2",
		"@types/intl": "^1.2.0",
		"@types/jest": "^22.2.2",
		"@types/node": "^9.6.0",
		"@types/uglifyjs-webpack-plugin": "^1.1.0",
		"@types/webpack": "^4.1.2",
		"babel-loader": "^8.0.0-beta.2",
		"clean-webpack-plugin": "^0.1.19",
		"css-loader": "^0.28.11",
		"detect-node": "^2.0.3",
		"jest": "^22.4.3",
